<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="200dp"
        android:elevation="50dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="52dp"
        android:layout_alignEnd="@+id/button"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Florence's Nightingale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAppearance="@style/BB_BottomBarItem_Fixed.Title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginTop="9dp"
                android:rating="2"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        app:srcCompat="@drawable/ericstonstreet"
        android:id="@+id/imageView3"
        android:layout_marginStart="22dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <TextView
        android:text="Fun loving foodie. Loves to roam around. Street food is my life. Have been to 100 cities. Next hundred are in line!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="14dp"
        android:layout_marginTop="55dp"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Contact Me"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="55dp"
        android:id="@+id/editText" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:id="@+id/button" />

    <TextView
        android:text="Eric Stonestreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/BB_BottomBarItem_Fixed.Title"
        android:textSize="24sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignEnd="@+id/button"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="'@stonestreetE'"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="33dp"
        android:id="@+id/textView8"
        tools:textStyle="italic" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="200dp"
        android:elevation="50dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cardview1"
        android:layout_alignStart="@+id/cardview1"
        android:layout_alignEnd="@+id/cardview1"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Sweet Sour Sweden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/BB_BottomBarItem_Fixed.Title" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar3"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:rating="4"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/textView9" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="200dp"
        android:elevation="50dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cardview"
        android:layout_alignStart="@+id/cardview"
        android:layout_alignEnd="@+id/cardview"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Just Jaipuri Delight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAppearance="@style/BB_BottomBarItem_Fixed.Title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar4"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_marginTop="8dp"
                android:rating="2.5" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:text="Top Places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/cardview1"
        android:layout_marginTop="21dp"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>