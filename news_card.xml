<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    card_view:cardBackgroundColor="#ffffff"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:id="@+id/l"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
        android:id="@+id/folding_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        folding-cell:animationDuration="700"
        folding-cell:backSideColor="@android:color/transparent"
        folding-cell:additionalFlipsCount="2">

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:visibility="gone">

            <TextView
                android:text="Romantic Four Course Dinner for Two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <TextView
                android:text="Sitting atop one of the most beautiful high rises of Jaipur, this experience will take you through the streets of the city while gliding seamlessly through the mood."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="27dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Romantoc Local Dinner for 2"
                android:id="@+id/headline"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <ImageView
                card_view:srcCompat="@drawable/dine"
                android:id="@+id/imageView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="7:00 PM - 10:00 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="320dp" />

            <CheckBox
                android:text="Alchohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_marginTop="350dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:text="BOOK"
                android:layout_marginTop="345dp"
                android:layout_marginLeft="210dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="13dp"
            android:background="#e4e4e4"
            android:layout_margin="5dp">

            <ImageView
                card_view:srcCompat="@drawable/boy"
                android:id="@+id/imageView2"
                android:layout_marginLeft="-250dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="192dp"
                android:text="Micky Mantle"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="10dp"
                android:id="@+id/t" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="87dp"
                android:rating="3.5"
                android:progressTint="#ffc125" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/BB_BottomBarItem_Fixed.Title"
                android:text="Romantic Four Course Dinner for Two"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="45dp"
                android:textSize="11sp" />

        </FrameLayout>

    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>

</android.support.v7.widget.CardView>